#Volume Up
"pactl set-sink-volume @DEFAULT_SINK@ +10%"
    m:0x0 + c:76
    F10 

#Volume Down
"pactl set-sink-volume @DEFAULT_SINK@ -10%"
    m:0x0 + c:75
    F9 

#Toggle Audio
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    m:0x0 + c:74
    F8 

#Brightness Up
"xbacklight -inc 9.99 && echo $(xbacklight) > $HOME/.config/.brightness"
    m:0x0 + c:73
    F7 

#Brightness Down
"xbacklight -dec 9.99 && echo $(xbacklight) > $HOME/.config/.brightness"
    m:0x0 + c:72
    F6 

